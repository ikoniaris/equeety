<h1>Create a new deal</h1>
<%= form_for @deal do |f| %>
	<div class="field">
	    <%= f.label :startup_name %><br />
	    <%= f.text_field :startup_name %>
	</div>
	<div class="field">
	    <%= f.label :website %><br />
	    <%= f.text_field :website %>
	</div>
	<div class="field">
	    <%= f.label :contact_name %><br />
	    <%= f.text_field :contact_name %>
	</div>
	<div class="field">
	    <%= f.label :contact_email %><br />
	    <%= f.text_field :contact_email %>
	</div>
	<div class="actions">
	    <%= f.submit :value => 'Create deal'%>
	</div>
<% end %>