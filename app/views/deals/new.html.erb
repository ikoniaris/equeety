<h1>Create a new deal</h1>
<%= form_for @deal do |f| %>
	<div class="field">
	    <%= f.label :startup_name %><br />
	    <%= f.text_field :startup_name %>
	</div>
	<div class="field">
	    <%= f.label :website %><br />
	    <%= f.text_field :website %>
	</div>
	<div class="field">
	    <%= f.label :contact_name %><br />
	    <%= f.text_field :contact_name %>
	</div>
	<div class="field">
	    <%= f.label :contact_email %><br />
	    <%= f.text_field :contact_email %>
	</div>
	<div class="field">
	    <%= f.label :logo_url %><br />
	    <%= f.text_field :logo_url %>
	</div>
	<div class="field">
	    <%= f.label :required_amount %><br />
	    <%= f.text_field :required_amount %>
	</div>
	<div class="field">
	    <%= f.label :proposed_valuation %><br />
	    <%= f.text_field :proposed_valuation %>
	</div>
	<div class="actions">
	    <%= f.submit :value => 'Create deal' %>
	</div>
<% end %>

