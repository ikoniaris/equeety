<div class="section fund-status span-14 last">
	<h3>Fund status</h3>
	<div class="span-3">
		<div class="heading">INITIAL BUDGET</div>
		<div class="value"><%= dollars(current_user.budget) %></div>
	</div>
	<div class="span-3">
		<div class="heading">COMMITTED FUNDS</div>
		<div class="value"><%= dollars(current_user.committed_budget) %></div>
	</div>
	<div class="span-3">
		<div class="heading">FUNDS REMAINING</div>
		<div class="value highlighted"><%= dollars(current_user.remaining_budget) %></div>
	</div>
	<div class="span-5 last">
		<div class="span-5 last heading"><%= percentage(current_user.remaining_budget_percentage) %> FUNDS REMAINING</div>
		<div class="span-5 value last progress-bar">
			<div class="span-4 progress-bar-background">
				<div class="progress" style="width:<%= percentage(current_user.remaining_budget_percentage) %>;">&nbsp;</div>
			</div>
			<div class="span-1 progress-text last"><%= percentage(current_user.remaining_budget_percentage) %></div>
		</div>
	</div>
</div>