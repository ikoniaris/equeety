<html>
	<head>
		<head>
			<title>Equeety</title>
			<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
			<meta name="description" content="Deal-flow and portfolio management."/>
			<%= javascript_include_tag :defaults %>

			<%= stylesheet_link_tag "blueprint/screen.css" %>
			<%= stylesheet_link_tag :all %>
			<!--[if lt IE 8]>
				<link rel="stylesheet" href="stylesheets/blueprint/ie.css" type="text/css" media="screen, projection">
			<![endif]-->
		</head>
	</head>
	
	<body>
	
		<div class="container">			
				<div class="span-24 last">
					<div id="account-controls" class="last">
						<% if current_user %>
							<span class="quiet"><%= current_user.email %></span>
							<%= image_tag "divider.png" %>
							<%= content_tag(:span, link_to("Account", user_path(current_user))) %></span>
							<%= image_tag "divider.png" %>
							<%= content_tag(:span, link_to("Profile", user_path(current_user))) %></span>
							<%= image_tag "divider.png" %>
							<%= content_tag(:span, link_to("Log out", logout_path)) %></span>
						<% end %>
					</div>
				</div>
			
			<div id="main-menu" class="span-24 last">
				<div id="logo" class="span-6 prepend-1">
					<%= image_tag "logo.png" %>
				</div>
				
				<% if current_user %>
					<div class="span-17 last">
						<div id="navigation">
							<%= navigation_link "Dashboard", dashboard_path %>														
							<%= navigation_link "Deals", deals_path %>
						</div>
					</div>
				<% end %>
			</div>
			
			<%= yield %>
			
		</div>
	</body>
</html>