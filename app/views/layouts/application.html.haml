!!!
%html
  %head
    %title Equeety
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #outer_wrapper
      #wrapper
        #header
          .logo_section
            %h1
              %a{:href => root_path}
                %img{:src => "/images/logo.jpg", :alt => "logo", :title => "logo"}
          #navigation
            - if current_user
              %ul
                %li
                  %span
                    = link_to image_tag('nav_01.gif') + "Dashboard", dashboard_path
                %li
                  %span
                    = link_to image_tag('nav_02.gif') + "Deals", deals_path
          #user_detail_section
            %span
              Hello,&nbsp;Stefano&nbsp;Bernardi.
              = link_to "Profile", user_path, :class => "profile"
              = link_to "Log out", logout_path
            %img{:src => "images/user_img.jpg", :alt => "user"}
            - unless current_user
              = link_to "Sign up", new_user_path
              = link_to "Log in", login_path
          #notice
            = flash[:notice]
          #error
            = flash[:error]
    = yield
