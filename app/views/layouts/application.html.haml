!!!
%html
  %head
    %title Equeety
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #outer_wrapper
      #wrapper
        #header
          .logo_section
            %h1
              %a{:href => root_path}
                %img{:src => "/images/logo.jpg", :alt => "logo", :title => "logo"}
          #navigation
            - if current_user
              %ul
                %li
                  %span
                    = link_to image_tag('nav_01.gif') + "Dashboard", dashboard_path
                %li
                  %span
                    = link_to image_tag('nav_02.gif') + "Deals", deals_path
          #user_detail_section
            - if current_user
              %img{:src => "/images/user_img.jpg", :alt => "user"}
              %span
                = current_user.email
                = link_to "Profile", user_path, :class => "profile"
                = link_to "Log out", logout_path

            - else
              %span
                = link_to "Sign up", new_user_path
              %span
                = link_to "Log in", login_path
        %page
          #notice
            = flash[:notice]
          #error
            = flash[:error]
          = yield
    
